# Based on the LLVM style, but customized with your rules.
BasedOnStyle: LLVM
Language: Cpp

# Rule 1: Four spaces indentation
IndentWidth: 4
UseTab: Never

# Rule 2: No newline before opening a block
# Rule 9.3: Brace starts on new line ONLY for long init lists
# 'Attach' handles Rule 2. Rule 9.3 is a conflict;
# clang-format cannot easily break a brace *only* for multi-line
# constructor initializers while attaching it everywhere else.
# We will prioritize Rule 2.
BreakBeforeBraces: Attach

# Rule 7: No single-line blocks
AllowShortBlocksOnASingleLine: false
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false

# Rule 9: Initialization lists...
# ...on the same line if less than 2 items
# ...otherwise one per line
ConstructorInitializerAllOnOneLineOrOnePerLine: true

# Rule 10: Lines should be broken up after 80 columns
ColumnLimit: 80

# Rule 13: ...space after “//”
# This is handled by default, and ReflowComments helps manage it.
ReflowComments: true
